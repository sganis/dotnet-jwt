<?xml version="1.0" encoding="utf-8"?>
<!--
  auth/web.config
  IIS deployment configuration for the Windows Auth JWT gateway.

  Requirements:
    - ASP.NET Core Module v2 (installed with the .NET Hosting Bundle)
    - Windows Authentication feature enabled in IIS
    - Anonymous Authentication must stay enabled for GET /desktop/jwks
-->
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*"
             modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet"
                  arguments=".\auth.dll"
                  stdoutLogEnabled="false"
                  stdoutLogFile=".\logs\stdout"
                  hostingModel="inprocess" />
      <security>
        <authentication>
          <!-- Windows Auth required by [Authorize] on POST /desktop/token -->
          <windowsAuthentication enabled="true" />
          <!-- Anonymous must stay enabled for [AllowAnonymous] GET /desktop/jwks -->
          <anonymousAuthentication enabled="true" />
        </authentication>
      </security>
    </system.webServer>
  </location>
</configuration>
